
# Database connection string (Postgres/SQLite). Required.
DATABASE_URL=

# Seed-only (dev/local seeding). Optional.
SEED_PASSWORD=
SEED_PHONE=
# Optional; used by prisma/data/users.ts if provided
SEED_PHONE_USER=

# Server-side secret required for sign-up flow. Required.
SECRET_FRASE=

# WhatsApp Cloud API settings. All required.
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_TEMPLATE_PRE=
WHATSAPP_TEMPLATE_POST=

# Secret header used by cron route auth. Required.
CRON_SECRET=

# IANA timezone identifier (no DST in DR). Required.
# Example for Dominican Republic:
TIMEZONE=America/Santo_Domingo

# Optional; default 500
WHATSAPP_MAX_PER_RUN=